if [ -z "${ROOTDIR}" ]; then
    echo 'ERROR ROOTDIR not define'
    return
fi
if [ -z "${PYTHON3}" ]; then
    echo 'ERROR PYTHON3 not define'
    return
fi

# ----------------------------------------------------------------------------
# ----------------------------------------------------------------------------
# ------------------------------- REMOVE CAMB --------------------------------
# ----------------------------------------------------------------------------
# ----------------------------------------------------------------------------

cd $ROOTDIR/external_modules/code/CAMB/

rm -rf ./build/

rm -rf ./camb/__pycache__/

rm -f ./camb/camblib.so

rm -rf ./forutils/Releaselib/

$PYTHON3 setup.py clean

cd $ROOTDIR